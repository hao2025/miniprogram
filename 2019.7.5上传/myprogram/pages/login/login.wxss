/* pages/login/login.wxss */
.loginbox{
  width:70%;
  margin-left:15%;
}
.upstyle{
  border-top-left-radius:8px;
  border-top-right-radius:8px;
  width:100%;
  height:38px;
  display:inline-block;
  background:#fff;
}
.downstyle{
  width:100%;
  height:38px;
  display:inline-block;
  background:#fff;
  margin-top:5px;
  border-top:1px solid #f8f8f8;
}
.imagestyle{
  width:20%;
  display:inline-block;
  height:100%;
}
.input{
  width:80%;
  display:inline-block;
  height:100%;
  border-top: 0px;
  border-bottom: 1px solid black;
  border-left: 0px;
  border-right: 0px;
}
.loginBtn{
  border-radius: 25px;
  margin-top: 10rpx;
  margin-bottom: 10rpx;
  margin-left: 15%;
  margin-right: 15%;
  border:1px solid black;
}
<!--pages/login/login.wxml-->
<view class="loginBox">
     <view class='loginbox'>
       <view class='upstyle'>
         <view class='imagestyle'>
            <image src='../../photo/name.png' style='display:inline' mode="aspectFit"></image>
         </view>
         <input class='input' name="userName" placeholder-style='font-size:12px' placeholder='账户' bindinput ="userNameInput"></input>
       </view>
       <view class='downstyle'>
         <view class='imagestyle'>
            <image src='../../photo/key.png' style='display:inline' mode="aspectFit"></image>
          </view>
         <input class='input' name="passWord" password="true" placeholder-style='font-size:12px' placeholder='密码' bindinput="passWordInput"></input>      
       </view>
     </view>  
  </view>
<view>
    <view class="viewName" style="background-color:white">
          <button class="loginBtn" bindtap="loginBtnClick" style="background-color:blue">登陆</button>
        </view>
    <view class="viewName" style="background-color:white">
          <button class="loginBtn" bindtap="changeBtnClick" style="background-color:white">修改密码</button>
        </view>
</view>